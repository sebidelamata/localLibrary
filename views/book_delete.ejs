<h1><%=title%></h1>
<p>
    Title:
    <a href="<%=book.url%>"><%=book.title%></a>
</p>

<% if(book_instances.length){ %>
    <p> Delete the following book instances before attempting to delete this book.</p>
    <div style="margin-left:20px;margin-top:20px">
        <h4>Copies</h4>
        <dl>
            <% for(let bookinstance of book_instances){ %>
                    <p>
                        Imprint: <%=bookinstance.imprint%>
                    </p> 
                    <p>
                        Status:
                        <% if(bookinstance.status == 'Available') {%>
                            <span class="text-success"><%=bookinstance.status%></span>
                        <% } else if(bookinstance.status == 'Maintenance'){ %>
                            <span class="text-danger"><%=bookinstance.status%></span>
                        <% } else { %>
                            <span class="text-warning"><%=bookinstance.status%></span>
                        <% } %>
                    </p>
                    <%  if(bookinstance.status !== 'Available'){%>
                        <p>Due back: <%=bookinstance.due_back%></p>
                    <% } %>
                </p>
            <% } %>
        </dl>
    </div>
<% } else { %>
    <p>Do you really want to delete this Book</p>
    <form method="POST">
        <div class="form-group">
            <input type="hidden" id="bookid" class="form-control" name="bookid" value="<%=book.id%>">
            <button class="btn btn-primary" type="submit">Delete</button>
        </div>
    </form>
<% } %>