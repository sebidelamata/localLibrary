<h1><%=title%></h1>
<p><%=author.lifespan%></p>
<% if(author_books.length){ %>
    <p> Delete the following books before attempting to delete this author.</p>
    <div style="margin-left:20px;margin-top:20px">
        <h4>Books</h4>
        <dl>
            <% for(let book of author_books){ %>
                <dt>
                    <a href="<%=book.url%>"><%=book.title%></a>
                </dt>
                <dd><%=book.summary%></dd>
            <% } %>
        </dl>
    </div>
<% } else { %>
    <p>Do you really want to delete this Author</p>
    <form method="POST">
        <div class="form-group">
            <input type="hidden" id="authorid" class="form-control" name="authorid" value="<%=author.id%>">
            <button class="btn btn-primary" type="submit">Delete</button>
        </div>
    </form>
<% } %>