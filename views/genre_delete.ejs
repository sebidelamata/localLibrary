<h1><%=title%></h1>
<% if(allBooksByGenre.length){ %>
    <p> Delete the following books before attempting to delete this genre.</p>
    <div style="margin-left:20px;margin-top:20px">
        <h4>Books</h4>
        <dl>
            <% for(let book of allBooksByGenre){ %>
                <dt>
                    <a href="<%=book.url%>"><%=book.title%></a>
                </dt>
                <dd><%=book.summary%></dd>
            <% } %>
        </dl>
    </div>
<% } else { %>
    <p>Do you really want to delete this Genre</p>
    <form method="POST">
        <div class="form-group">
            <input type="hidden" id="genreid" class="form-control" name="genreid" value="<%=genre.id%>">
            <button class="btn btn-primary" type="submit">Delete</button>
        </div>
    </form>
<% } %>